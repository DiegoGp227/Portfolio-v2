---
import InfoPage from "../../../Components/Projects/molecules/InfoPage.astro";
import FeaturesNotte from "../../../Components/Projects/molecules/FeaturesNotte.astro";
import ImgDiv from "../../../Components/Projects/ImgDiv/ImgDiv.astro";
import TecnologiesNotte from "../../../Components/Projects/molecules/TecnologiesNotte.astro";
import Layout from "../../Layout.astro";
---

<Layout>
  <div class="w-screen flex mt-10">
    <div class="w-1/2 flex flex-col justify-center items-center p-3">
      <InfoPage
        title="Notte"
        text="Es una aplicación web sencilla e intuitiva para tomar, organizar y acceder a tus notas desde cualquier lugar. Pensada para quienes necesitan capturar ideas rápidamente, mantener apuntes ordenados o registrar información importante. Ofrece una experiencia fluida con funciones como creación, edición y eliminación de notas."
        linkPage="https://github.com/devkaleth/notte"
        linkGit="https://github.com/DiegoGp227/taskly-v2"
      />
      <TecnologiesNotte />
    </div>

    <div class="w-1/2 flex justify-center items-center flex-col">
      <ImgDiv src="/Assets/notte-home.jpeg" />
      <FeaturesNotte />
    </div>
  </div>
</Layout>
