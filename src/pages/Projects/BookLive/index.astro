---
import Layout from "../../../layouts/Layout.astro";
import WithPage from "../../../Components/Projects/MainInformation/WithPage/index.astro";
import SecondInformation from "../../../Components/Projects/SecondInformation/index.astro";
import ImgDiv from "../../../Components/Projects/ImgDiv/index.astro";
import Html from "../../../Components/Projects/Technologies/Html/index.astro";
import Css from "../../../Components/Projects/Technologies/Css/index.astro";
import Javascript from "../../../Components/Projects/Technologies/Javascript/index.astro";
import Node from "../../../Components/Projects/Technologies/Node/index.astro";
import Express from "../../../Components/Projects/Technologies/Express/index.astro";
import Mysql from "../../../Components/Projects/Technologies/Mysql/index.astro";
import style from "./_style.module.css";
---

<Layout>
  <div class={style.divGeneral}>
    <div class={style.divLeft}>
      <WithPage
        title="Book Live"
        text="Una aplicación web pensada para lectores apasionados que desean llevar un registro personal de sus lecturas. Permite guardar cada libro leído junto con una nota o reflexión sobre la experiencia que dejó, creando un respaldo emocional y literario de cada lectura. Además, ofrece una lista de deseos donde los usuarios pueden anotar los libros que quieren leer en el futuro."
        link="https://github.com/DiegoGp227/Book-Live"
      />
      <div>
        <div class={style.divTitleTechnologies}>
          <h2 class={style.titleTechnologies}>Tecnologies</h2>
        </div>
        <div class={style.secctionTechnologies}>
          <Css />
          <Html />
          <Javascript />
          <Node />
          <Express />
          <Mysql />
        </div>
      </div>
    </div>
    <div class={style.divRight}>
      <ImgDiv src="/Assets/booklive1.png" />
      <SecondInformation />
    </div>
  </div>
</Layout>
