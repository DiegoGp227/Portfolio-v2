---
import Layout from "../../layouts/Layout.astro";
import TitleDiv from "../../Components/AboutMe/TitleDiv/index.astro";
import InfoDiv from "../../Components/AboutMe/InfoDiv/index.astro";
import ProfileImg from "../../Components/AboutMe/ProfileImg/index.astro";
---

<Layout>
  <main class="box-border m-0 p-0 w-full min-h-screen flex flex-col justify-center items-center">
    <div class="min-h-[20vh] flex items-end justify-center text-center">
      <TitleDiv />
    </div>
    <div class="mt-[30px] w-full max-w-[1200px] flex flex-col md:flex-row gap-5 items-center md:items-start justify-center">
      <InfoDiv />
      <ProfileImg />
    </div>
  </main>
</Layout>
