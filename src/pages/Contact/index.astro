---
import Layout from "../Layout.astro";
import ContactForm from "../../Components/Contact/molecules/ContactForm.astro";
import ContactInfo from "../../Components/Contact/molecules/ContactInfo.astro";
---

<Layout>
  <div class="w-screen h-auto flex flex-col items-center justify-start mt-10">
    <div class="w-full h-auto flex justify-center items-center mb-8 py-5">
      <h1
        class="text-5xl font-bold md:text-[45px] lg:text-[50px] max-[480px]:text-[28px] text-primary text-center"
      >
        Contactame!
      </h1>
    </div>
    <main
      class="contact-main w-full max-w-[800px] bg-hard-purple bg-linear-to-r from-[#2f0a51] to-primary rounded-[20px] max-[480px]:rounded-[15px] flex flex-col md:flex-row md:justify-between box-border"
    >
      <ContactInfo />
      <ContactForm />
    </main>
  </div>
</Layout>
