---
const { src, title, text, link, class: className } = Astro.props;
---

<div class="w-full max-w-[250px] min-w-[200px] h-auto p-2.5 bg-[hsl(278,100%,10%)] rounded-[5px] box-border flex flex-col md:max-w-[220px] md:min-w-[180px] max-[480px]:max-w-[280px] max-[480px]:min-w-[260px] max-[480px]:mx-auto max-[320px]:max-w-[260px] max-[320px]:min-w-[240px]">
  <div class="h-auto overflow-hidden rounded-[3px]">
    <img src={src} alt={title} class="w-full h-auto object-cover" />
  </div>
  <div class="min-h-[115px] flex flex-col justify-between flex-grow mt-2 max-[480px]:min-h-[100px]">
    <div>
      <h3 class="text-[#f0f8ff] text-base font-semibold my-2 mx-0 mt-2 mb-1 leading-[1.3] md:text-[15px] max-[480px]:text-sm max-[480px]:my-1.5 max-[480px]:mx-0 max-[480px]:mt-1.5 max-[480px]:mb-[3px] max-[320px]:text-[13px]">{title}</h3>
      <p class="text-[#f0f8ff] text-sm leading-[1.4] mb-2 flex-grow md:text-[13px] max-[480px]:text-xs max-[480px]:mb-1.5 max-[320px]:text-[11px]">{text}</p>
    </div>
    <div>
      <button class="w-full py-2 px-[5px] bg-[#1f0031] border-2 border-[blueviolet] text-[blueviolet] rounded-[5px] transition-all duration-500 cursor-pointer text-sm hover:bg-[blueviolet] hover:text-[#f0f8ff] md:py-1.5 md:px-1 md:text-[13px] max-[480px]:py-1.5 max-[480px]:px-1 max-[480px]:text-xs" onclick={`location.href='${link}'`}>Link</button>
    </div>
  </div>
</div>